        <script type="text/javascript">
            //保存事件
            document.onkeydown = function(e){
                e = window.event || e;
                var keycode = e.keyCode || e.which;
                if(e.ctrlKey && keycode== 83){
                    e.preventDefault();
                    window.event.returnValue= false;
                    alert("as");
                }
            }
            //保存按钮事件
            function btnSave_click(){
                $.ajax({
                    type: 'get',
                    url: '/pnote/save' ,
                    data: {} ,
                    success: function(data){
                        alert(data);
                    } ,
                    dataType: 'html',
                    error:function(err){
                        alert(err);
                    }
                });
                return false;
            }

        </script>